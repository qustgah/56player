    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/videoThumbNail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="15dp"
        android:paddingLeft="10dp" /> 

</LinearLayout>
